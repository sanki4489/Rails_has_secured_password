<div class="container">
    <h1>Login</h1>
    <div class="signup-form">
        <%= form_with(scope: :session, url: login_path) do |f| %>
            <%= f.label :email %>
            <%= f.email_field :email %>
            <%= f.label :password %>
            <%= f.password_field :password %>
            <%= f.submit "Log In", class: "btn-primary" %>
        <% end %>
    </div>
</div>