<div class="signup-form">
    <%= form_for(@user) do |f| %>
        <%= f.label :name %>
        <%= f.text_field :name %>
        <%= f.label :email %>
        <%= f.email_field :email %>
        <%= f.label :password %>
        <%= f.password_field :password %>
        <%= f.submit(@user.new_record? ? "Sign Up" : "Update profile", class: "btn-primary") %>
    <% end %>
</div>